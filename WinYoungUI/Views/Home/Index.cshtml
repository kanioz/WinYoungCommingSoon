@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>WinYoung - Coming Soon</title>
    <link href="tools/style.css" rel="stylesheet" type="text/css" media="screen" />
    <script type="text/javascript" src="tools/jquery.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href="https://file.myfontastic.com/n6vo44Re5QaWo8oCKShBs7/icons.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale = 1.0, user-scalable = no">
</head>
<body>
    <div class="transy"></div>
    <div class="wrapper">
        <div class="centered">
            <div class="header">
                <h1 id="logo">WinYoung</h1>
                <p class="line1">- design & development -</p>
            </div>

            <div class="content">
                <p>we are working on something very interesting!</p>
            </div>




            <div class="form">
                <p>be notified! we just need your email address.</p>
                <div class="mainform">
                    <form method="post" action="Home/SaveEmail" id="newsLatterForm">
                        <div class="field">
                            <input type="text" name="Email" class="field" id="test" value="example@youremail.com" />
                        </div>
                        <div class="submit">
                            <input class="submit" type="submit" value="Okay" />
                        </div>
                    </form>
                </div>
                <p id="result" style="margin-bottom:20px; display: none"></p>
            </div>



            <div class="social">
                <p>
                    @*<a href="#"><span class="socicon-pinterest"></span></a>
                        <a href="#"><span class="socicon-instagram"></span></a>*@
                    <a href="#"><span class="socicon-twitter"></span></a>
                    <a href="#"><span class="socicon-facebook"></span></a>
                </p>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $(function () {
            $('#newsLatterForm').on('submit', function (e) {
                e.preventDefault();
                $("#result").hide();
                $("#result").text("");
                $.ajax({
                    url: $(this).attr('action'),
                    type: "POST",
                    data: $(this).serialize(),
                    success: function (data) {
                        $("#result").text(data.message);
                        $("#result").show();
                    },
                    error: function (jXhr, textStatus, errorThrown) {
                        console.log(errorThrown);
                    }
                });
            });
        });

        var placeholder = $("#test").val();

        $("#test").keydown(function () {
            $("#result").hide();
            $("#result").text("");
            if (this.value == placeholder) {
                this.value = '';
            }
        }).blur(function () {
            $("#result").hide();
            if (this.value == '') {
                this.value = placeholder;
            }
        });
    </script>
</body>
</html>
