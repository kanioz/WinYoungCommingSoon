@model string
<script src="~/Content/plugins/ckeditor/ckeditor.js"></script>
<script src="~/Content/plugins/ckfinder/ckfinder.js"></script>

<script>
    $(document).ready(function () {
        CKEDITOR.replace("@Model", {
            enterMode: CKEDITOR.ENTER_BR,
            filebrowserBrowseUrl: '/Content/plugins/ckfinder/ckfinder.html',
            filebrowserImageBrowseUrl: '/Content/plugins/ckfinder/ckfinder.html?type=Images',
            filebrowserUploadUrl: '/Content/plugins/ckfinder/connector?command=QuickUpload&type=Files',
            filebrowserImageUploadUrl: '/Content/plugins/ckfinder/connector?command=QuickUpload&type=Images'
        });
        CKEDITOR.skinName = 'moonocolor';
        CKEDITOR.language = 'tr';
        CKEDITOR.config.pasteFromWordRemoveFontStyles = false;
        //CKFinder.setupCKEditor(null, '/content/ckfinder/');
    });
</script>